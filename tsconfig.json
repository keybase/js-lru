{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "src/",
    "outDir": "lib",
    "declaration": true,
    "lib": ["es6"]
  },
  "include": ["src/*"],
  "exclude": ["__tests__"]
}
